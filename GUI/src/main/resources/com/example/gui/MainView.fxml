<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui.FuelStationController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="customerIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    



    <Button fx:id="generateInvoiceButton" text="Generate Invoice" onAction="#generateInvoice" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button fx:id="getInvoiceButton" text="Get Invoice" onAction="#getInvoice" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Label fx:id="statusLabel" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>

